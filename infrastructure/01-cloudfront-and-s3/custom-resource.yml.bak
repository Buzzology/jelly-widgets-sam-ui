    Value: !GetAtt CustomResourceStack.Outputs.S3BucketRootName
  S3BucketRootArn:
    Description: Website bucket arn
    Value: !GetAtt CustomResourceStack.Outputs.S3BucketRootName
  S3BucketWww:
    Description: Www website bucket
    Value: !GetAtt CustomResourceStack.Outputs.S3BucketWww
  S3BucketWwwName:
    Description: Www website bucket name
    Value: !GetAtt CustomResourceStack.Outputs.S3BucketWwwName
  CertificateArn:
    Description: Issued certificate
    Value: !GetAtt AcmCertificateStack.Outputs.CertificateArn
  CFDistributionName:
    Description: CloudFront distribution
    Value: !GetAtt CloudFrontStack.Outputs.CloudFrontDistribution
  CloudFrontDomainName:
    Description: Website address
    Value: !GetAtt CloudFrontStack.Outputs.CloudFrontDomainName
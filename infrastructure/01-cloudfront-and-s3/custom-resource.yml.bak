  S3BucketRoot:
    Description: Website bucket
    Value: !GetAtt CustomResourceStack.Outputs.S3BucketRoot
  # S3BucketLogsName:
  #   Description: Logging bucket name
  #   Value: !GetAtt CustomResourceStack.Outputs.S3BucketLogsName
